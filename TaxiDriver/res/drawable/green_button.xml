<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#556b2f"
                android:endColor="#556b2f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#556b2f" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#228b22"
                android:startColor="#006400"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8fbc8f" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item >

    
    <item>        
        <shape>
            <gradient
                android:endColor="#228b22"
                android:startColor="#006400"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8fbc8f" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>