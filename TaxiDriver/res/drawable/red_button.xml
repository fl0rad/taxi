<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#8b4513"
                android:startColor="#8b4513"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8b4513" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#b22222"
                android:startColor="#a52a2a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e9967a" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item >


    <item>        
        <shape>
            <gradient
                android:endColor="#b22222"
                android:startColor="#a52a2a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#e9967a" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>