<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newuser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="#000000"
     >

    <TextView
        android:id="@+id/newuserTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Hello."
        android:textSize="30dp" />

    <TextView
        android:id="@+id/newuserBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Thanks for downloading TapTaxi.\n\nTo get started, please take a few minutes to register yourself for our service.\n\nOnce done, you can begin to find passengers looking for a taxi!\n\nHave fun!"
        android:textSize="20dp" />

</LinearLayout>